<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_gt</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="pos_hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="pos_interface_section" position="after">
                <h2 class="mt16">Validaci√≥n de Lotes/Series</h2>
                <div class="row mt16 o_settings_container" id="pos_lot_check">
